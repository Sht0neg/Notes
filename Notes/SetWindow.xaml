<Window x:Class="Notes.SetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="SetWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Размер текста:" Margin="0,100,0,0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="SizeBox" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Цвет текста:" Margin="0,200,0,0" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox x:Name="CorolBox" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Применить" x:Name="CurButton" HorizontalAlignment="Center" Height="40" Width="100" Margin="0, 0, 180, 50" VerticalAlignment="Bottom" Click="CurButton_Click"/>
        <Button Content="Отменить" x:Name="CanButton" HorizontalAlignment="Center" Height="40" Width="100" Margin="180, 0, 0, 50" VerticalAlignment="Bottom" Click="CanButton_Click"/>
    </Grid>
</Window>
